                <TextBox x:Name="txtnodo" TextWrapping="Wrap" Foreground="#FFF0F0F0" Background="#FF379F96" FontSize="16" BorderBrush="{x:Null}" SelectionBrush="White" Height="28" Width="133" Canvas.Left="10" Canvas.Top="71" TabIndex="5"/>
